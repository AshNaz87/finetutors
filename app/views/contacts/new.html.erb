<h1 id="page_title">Contact</h1>
	<div class="container">
		<%= simple_form_for @contact, html: { class: 'form-horizontal' }, wrapper: :horizontal_form do |f| %>
			<%= f.error_notification %>
			<%= f.input :name, required: true %>
			<%= f.input :email, placeholder: 'you@example.com', required: true %>
			<%= f.input :subject, collection: [:Curriculum, :Jobs, :Other], prompt: 'Subject', required: true, error: 'You must select one' %>
			<%= f.input :message, as: :text, required: true, input_html: { rows: 6 } %>
			<div class="hidden">
				<%= f.input :nickname, hint: 'leave this field blank' %>	
			</div>
			<%= f.button :submit, 'Send Message', class: 'btn btn-primary' %>
		<% end %>
	</div>

